{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ]
}